#Define Domain
type vendor_ams_service_qti, domain;
type vendor_ams_service_qti_exec, exec_type, vendor_file_type, file_type;

#Make ams_service part of the same domain as hal_audio
hal_server_domain(vendor_ams_service_qti, hal_audio)
binder_call(vendor_ams_service_qti, hal_audio_default)
#Allow for transition from init domain to ams_service
init_daemon_domain(vendor_ams_service_qti)

# Add hwservice related rules
hal_attribute_hwservice(hal_audio, hal_ams_hwservice)

#Allow access to ams device nodes
allow vendor_ams_service_qti vendor_agm_device:chr_file rw_file_perms;

#Allow qipc socket access for servreg communication
allow vendor_ams_service_qti self:qipcrtr_socket create_socket_perms_no_ioctl;
binder_call(vendor_ams_service_qti vendor_agmservice_qti)

# Allocate DMA-BUF Heap memory
allow vendor_ams_service_qti dmabuf_system_heap_device:chr_file rw_file_perms;
allow vendor_ams_service_qti vendor_dmabuf_system_heap_device:chr_file rw_file_perms;
allow vendor_ams_service_qti vendor_dmabuf_audio_ml_heap_device:chr_file rw_file_perms;

userdebug_or_eng(`
  allow vendor_ams_service_qti vendor_sysfs_kpi:file w_file_perms;

#Allow for pd_locater service access
  get_prop(vendor_ams_service_qti, vendor_pd_locater_dbg_prop)
')
